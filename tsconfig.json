{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"],
      "~userscripter/*": ["./lib/userscripts/*"]
    },
    "target": "es6",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "jsx": "react"
  },
  "include": ["./src/*.d.ts", "./src/**/*.tsx", "./src/**/*.ts"]
}
